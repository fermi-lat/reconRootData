 ../reconRootData/TkrVertex.h\
 ../reconRootData/ReconLinkDef.h"

macro root_includes "-I$(DIGIROOTDATAROOT)" 
macro root_linkdef "../reconRootData/ReconLinkDef.h"

apply_pattern root_package


library  reconRootData \
